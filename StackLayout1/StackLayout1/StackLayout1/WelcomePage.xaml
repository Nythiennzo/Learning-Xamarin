<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayout1.WelcomePage"
            BackgroundColor="#127ac7">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
             iOS="0, 20, 0, 0">
        </OnPlatform>
    </ContentPage.Padding>


    <StackLayout VerticalOptions="Center">
        <Label Text="Welcome to Xamarin" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
        <Label Text="Cross-platform apps made easy" FontSize="18" HorizontalOptions="Center" TextColor="White"/>
        <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White"/>
        <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White"/>
    </StackLayout>

</ContentPage>